<%

return render(plain: "") if @item.backups.size == 0
source = ERB::Util.url_encode(request.path)
before = @item.before_backup || @item.backups.last

addon ||= local_assigns.fetch(:addon, {})
addon[:disabled] = false
%>

<div class="see mod-history-backup pt-5">
  <% if before %>
    <p><%= link_to I18n.t('history.compare_before_state'), history_cms_change_path(source: source, id: before.id), class: 'btn btn-outline-secondary' %></p>
  <% end %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>更新日時</th>
        <th>更新者</th>
      </tr>
    </thead>
    <tbody>
    <% @item.backups.limit(10).each do |item| %>
      <tr>
        <td>
          <% if @item.allowed?(:edit, @cur_user) %>
            <% source = ERB::Util.url_encode(request.path) %>
            <%= link_to I18n.l(item.created), history_cms_backup_path(source: source, id: item.id) %>
          <% else %>
            <%= I18n.l(item.created) %>
          <% end %>
        </td>
        <td>
          <% if item.user %>
            <span style="margin-left: 0.5em;"><%= item.user.name %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
