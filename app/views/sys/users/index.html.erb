<% @table_def = define_ss_table do |tbl| %>
  <% tbl.column_checkbox %>

  <% tbl.column(class: "name") do %>
    <% tbl.th @model.t :name %>
    <% tbl.td do |item| %><%= link_to(item.name, action: :show, id: item) %><% end %>
  <% end %>

  <% tbl.column(class: "id") do %>
    <% tbl.th @model.t :uid %>
    <% tbl.td do |item| %>#<%= item.uid.presence || item.id %><% end %>
  <% end %>

  <% tbl.column(class: "email") do %>
    <% tbl.th @model.t :email %>
    <% tbl.td do |item| %><%= mail_to item.email %><% end %>
  <% end %>

  <% tbl.column(class: "tel") do %>
    <% tbl.th @model.t :tel %>
    <% tbl.td do |item| %><%= item.tel_label %><% end %>
  <% end %>

  <% tbl.column_updated %>
  <% tbl.tap_menu %>
<% end %>

<%= render file: "ss/crud/index" %>
