<div id="menu">
  <div class="d-flex flex-wrap align-item-center justify-content-between mb-0">
    <nav>
      <% if params[:action] =~ /index/ %>
        <%= link_to(t('ss.links.new'), { action: :new }, { class: "btn btn-outline-secondary" }) if @model.allowed?(:edit, @cur_user, site: @cur_site) %>
      <% elsif params[:action] =~ /new|create/ %>
        <%= link_to(t('ss.links.back_to_index'), { action: :index }, { class: "btn btn-outline-secondary" }) %>
      <% elsif params[:action] =~ /edit|update|delete/ %>
        <%= link_to(t('ss.links.back_to_show'), { action: :show, id: @item }, { class: "btn btn-outline-secondary" }) if @item.allowed?(:edit, @cur_user, site: @cur_site) %>
        <%= link_to(t('ss.links.back_to_index'), { action: :index }, { class: "btn btn-outline-secondary" }) %>
      <% else %>
        <%= link_to(t('ss.links.edit'), { action: :edit, id: @item }, { class: "btn btn-outline-secondary" }) if @item.allowed?(:edit, @cur_user, site: @cur_site) %>
        <% if @item.allowed?(:edit, @cur_user, site: @cur_site) %>
          <%= link_to(t('ss.role_setting'), { action: :role_edit, id: @item }, { class: "btn btn-outline-secondary" }) if @item.users.present? %>
        <% end %>
        <%= link_to(t('ss.links.delete'), { action: :delete, id: @item }, { class: "btn btn-outline-secondary" }) if @item.allowed?(:edit, @cur_user, site: @cur_site) %>
        <%= link_to(t('ss.links.back_to_index'), { action: :index }, { class: "btn btn-outline-secondary" })%>
      <% end %>
    </nav>
  </div>
</div>
