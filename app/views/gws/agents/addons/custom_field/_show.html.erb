<dl class="see mod-gws-custom_field">
  <dt><%= @model.t :tooltips %></dt>
  <dd><%= br @item.tooltips.join("\n") %></dd>

  <dt><%= @model.t :input_type %></dt>
  <dd><%= @item.label :input_type %></dd>

  <dt><%= @model.t :select_options %></dt>
  <dd><%=br @item.select_options.join("\n") %></dd>

  <dt><%= @model.t :required %></dt>
  <dd><%= @item.label :required %></dd>

  <dt><%= @model.t :max_length %></dt>
  <dd><%= @item.max_length %></dd>

  <dt><%= @model.t :place_holder %></dt>
  <dd><%= @item.place_holder %></dd>

  <dt><%= @model.t :additional_attr %></dt>
  <dd><%= @item.additional_attr %></dd>

  <% if @model.input_type_include_upload_file? %>
    <dt><%= @model.t :max_upload_file_size %></dt>
    <dd><%= number_to_human_size(@item.max_upload_file_size) %></dd>
  <% end %>
</dl>
