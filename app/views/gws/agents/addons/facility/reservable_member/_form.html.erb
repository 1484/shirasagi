<%= jquery do %>
  SS_AddonTabs.hide(".gws-facility-reservable-member");
<% end %>

<dl class="see gws-facility-reservable-member">
  <dt><%= @model.t :reservable_member_ids %><%= @model.tt :reservable_member_ids %></dt>
  <dd>
    <%= f.hidden_field "reservable_member_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("ss.apis.users.index"), gws_apis_users_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::User.t :name %></th><th></th></tr></thead>
      <tbody>
        <% @item.reservable_members.each do |user| %>
        <tr data-id="<%= user.id %>">
          <td><%= f.hidden_field "reservable_member_ids[]", value: user.id %> <%= user.name %></td>
          <td><%= link_to t("views.button.delete"), "#", class: "deselect btn" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
