<% @index_meta = proc do |item| %>
  <span class="id">#<%= item.id %></span>
  <span class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></span>
  <span class="gws-board-categories">
  <% item.categories.each do |category| %>
    <%= link_to gws_share_category_files_path(category: "/#{category.name}") do %>
      <span class="gws-share-color-block" style="<%= "background-color: #{category.color}; color: #{category.text_color}" %>">
        <%= category.name %>
      </span>
    <% end %>
  <% end %>
  </span>
<% end %>

<%= render file: "gws/crud/index" %>
