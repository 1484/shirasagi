<div class="index">
  <%= render file: "_list_head" %>

  <ul class="list-items">
    <% @items.each do |item| %>
    <li class="list-item">
      <nav class="tap-menu">
        <%= link_to :show, gws_board_topic_path(@cur_org, item) if item.allowed?(:read, @cur_user, @cur_group) %>
        <%= link_to :edit, edit_gws_board_topic_path(@cur_org, item) if item.allowed?(:edit, @cur_user, @cur_group) %>
        <%= link_to :delete, delete_gws_board_topic_path(@cur_org, item) if item.allowed?(:delete, @cur_user, @cur_group) %>
      </nav>

      <label class="check"><input type="checkbox" name="ids[]" value="<%= item.id %>" /></label>
      <div class="info">
        <%= link_to item.name, { action: :show, id: item }, class: "title" %>

        <div class="meta">
          <span class="id">#<%= item.id %></span>
          <span class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></span>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
