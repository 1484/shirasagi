<% @index_title = proc do |item| %>
  <%= link_to item.user_name, { action: :show, id: item.id }, class: 'title' %>
  <% if item.default? %>
    (<%= item.t :default %>)
  <% end %>
<% end %>

<% @index_meta = proc do |item| %>
  <span class="datetime"><%= item.updated.strftime('%Y/%m/%d %H:%M') %></span>
  <span class="filename"><%= truncate item.email, length: 40 %></span>
<% end %>

<%= render file: 'gws/crud/index' %>
