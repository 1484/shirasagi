<div class="index">
  <%= render file: "_list_head" %>

  <ul class="list-items">
    <% @items.each do |item| %>
    <li class="list-item">
      <nav class="list-item-tap">
        <%= link_to :show, action: :show, id: item if item.allowed?(:read, @cur_user) %>
        <%= link_to :edit, action: :edit, id: item if item.allowed?(:edit, @cur_user) %>
        <%= link_to :delete, action: :delete, id: item  if item.allowed?(:delete, @cur_user) %>
        <% if item.try(:image?) %>
          <%= link_to image_tag(url_for(action: :thumb, id: item.id)),
            { action: :view, id: item.id }, { class: "thumb", target: "_blank" } %>
        <% end %>
      </nav>

      <label><input type="checkbox" name="ids[]" value="<%= item.id %>" /></label>
      <div class="list-item-info">
        <% title = item.try(:name) || item.try(:title) || item.try(:filename) || "##{item.id}" %>
        <%= link_to title, { action: :show, id: item }, class: "list-item-title" %>

        <div class="list-item-meta">
          <span class="id">#<%= item.id %></span>
          <% if item.try(:updated) %>
            <span class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></span>
          <% end %>
          <% if item.try(:filename) %>
            <span class="filename"><%= File.basename item.filename %></span>
          <% end %>
          <% if item.try(:status) %>
            <span class="state"><%= t "views.state.#{item.status}" %></span>
          <% end %>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
