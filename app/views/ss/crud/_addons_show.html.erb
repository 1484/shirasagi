<% css_classes ||= [] %>
<% addons.each do |addon| %>
  <% buf = nil %>
  <% buf = render file: addon.show_file, locals: { f: f } if addon.show_file %>
  <% next if buf.blank? %>
  <% addon_options = { id: "addon-#{addon.id}", head: addon.name, class: css_classes, toggle: true } %>
  <%= render "ss/crud/addon_show", addon: addon_options do %>
    <%= buf %>
  <% end %>
<% end %>
