<%
  addon_options = {}
  addon_options[:id] = "addon-basic"
  addon_options[:head] = t("sns.connection")
%>
<%= render "ss/crud/addon_show", addon: addon_options do %>
  <%= ss_field_tag_set "item[remote_addr]", request.env["HTTP_X_REAL_IP"] || request.remote_addr, label: t("sys.remote_addr"), disabled: true %>
  <%= ss_field_tag_set "item[user_agent]", request.user_agent, label: t("sys.user_agent"), disabled: true %>
  <%= ss_field_tag_set "item[server_name]", Socket.gethostname, label: t("sys.server_name"), disabled: true %>
<% end %>
