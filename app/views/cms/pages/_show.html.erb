<%= f.ss_field_set :name %>
<%= f.ss_field_set :index_name %>
<%= f.ss_field_set :basename do %>
  <input class="form-control" type="text" value="<%= @item.basename %>" />
  <small class="form-text text-muted">
    <%= @item.public? ? link_to(@item.full_url, @item.full_url, target: "_blank") : @item.full_url %>
    (
    <% if @cur_site.mobile_enabled? %>
      <%= link_to t("cms.preview_pc_page"), cms_preview_path(path: @item.preview_path), target: "_blank" %>
      |
      <%= link_to t("cms.preview_mobile_page"), cms_mobile_preview_path(path: @item.preview_path), target: :_blank %>
    <% else %>
      <%= link_to t("cms.preview_page"), cms_preview_path(path: @item.preview_path), target: "_blank" %>
    <% end %>
    )
  </small>
<% end %>

<% if @item.layout.present? %>
  <%= f.ss_field_set :layout_id do %>
    <%= f.text_field :layout_id, value: @item.layout.name %>
  <% end %>
<% end %>

<% if @item.body_layout.present? %>
  <%= f.ss_field_set :body_layout_id do %>
    <%= f.text_field :body_layout_id, value: @item.body_layout.name %>
  <% end %>
<% end %>

<%= f.ss_field_set :order %>
