<%= f.ss_field_set :route, tt: true do %>
  <%= f.hidden_field :route %>
  <%= @item.label :route %> &nbsp;<%= link_to t('ss.links.change'), routes_cms_nodes_path, class: "ajax-box btn btn-outline-secondary btn-sm" %>
<% end %>

<%= f.ss_field_set :name, tt: @model.tt(:title) %>

<%= f.ss_field_set :index_name, tt: @model.tt(:title_for_index) %>

<%= f.ss_field_set :basename, type: :text, tt: @model.tt(:foldername), class: "filename" %>

<%= f.ss_field_set :layout_id, tt: true do %>
  <%= f.select :layout_id, ancestral_layouts(@item), include_blank: true %>
<% end %>

<% file = "#{Rails.root}/app/views/" + @item.route.sub('/', '/agents/nodes/') + "/edit/_form.html.erb" %>
<%= render file: file, locals: { f: f } if File.exists?(file) %>
