<%

file = "#{Rails.root}/app/views/" + @item.route.sub('/', '/agents/nodes/') + "/edit/_show.html.erb"

%><dl class="see">
  <dt><%= @model.t :route %></dt>
  <dd><%= @item.label :route %></dd>

  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :index_name %></dt>
  <dd><%= @item.send :index_name %></dd>

  <dt><%= @model.t :basename %></dt>
  <dd><%= @item.send :basename %></dd>
  <dd>
    <%= @item.public? ? link_to(@item.full_url, @item.full_url, target: "_blank") : @item.full_url %>
    (
    <% if @cur_site.mobile_enabled? %>
      <%= link_to :"cms.preview_pc_page", cms_preview_path(path: "#{@item.filename}/"), target: "_blank" %>
      |
      <%= link_to :"cms.preview_mobile_page", cms_mobile_preview_path(path: "#{@item.filename}/"), target: :_blank %>
    <% else %>
      <%= link_to :"cms.preview_page", cms_preview_path(path: "#{@item.filename}/"), target: "_blank" %>
    <% end %>
    )
  </dd>

  <dt><%= @model.t :layout_id %></dt>
  <dd><%= tryb { @item.layout.name }%></dd>

  <% if @item.lang_id.present? %>
  <dt><%= @model.t :lang_id %></dt>
  <dd><%= I18n.t("views.options.lang.#{@item.lang_id}") || @item.lang_id %></dd>
  <% end %>
</dl>

<%= render file: file if File.exists?(file) %>
