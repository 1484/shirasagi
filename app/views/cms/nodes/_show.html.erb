<%= f.ss_field_set :route, value: @item.label(:route), disabled: true %>
<%= f.ss_field_set :name, disabled: true %>
<%= f.ss_field_set :index_name, disabled: true %>
<%= f.ss_field_set :basename, disabled: true do %>
  <%= f.text_field :basename, value: @item.basename, disabled: true %>
  <%= @item.public? ? link_to(@item.full_url, @item.full_url, target: "_blank") : @item.full_url %>
  (
  <% if @cur_site.mobile_enabled? %>
    <%= link_to t("cms.preview_pc_page"), cms_preview_path(path: @item.preview_path), target: "_blank" %>
    |
    <%= link_to t("cms.preview_mobile_page"), cms_mobile_preview_path(path: @item.preview_path), target: :_blank %>
  <% else %>
    <%= link_to t("cms.preview_page"), cms_preview_path(path: @item.preview_path), target: "_blank" %>
  <% end %>
  )
<% end %>
<%= f.ss_field_set :layout_id, value: tryb { @item.layout.name }, disabled: true %>

<% file = "#{Rails.root}/app/views/" + @item.route.sub('/', '/agents/nodes/') + "/edit/_show.html.erb" %>
<%= render file: file if File.exists?(file) %>
