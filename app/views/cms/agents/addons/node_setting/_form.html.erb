<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"

  view_route = params[:route] ? params[:route] : @item.route
  view_route = @item.view_route if @item.view_route.present?
%>
<%= f.ss_field_set :page_layout_id, tt: true do %>
  <%= f.select :page_layout_id, ancestral_layouts(@item), include_blank: true %>
<% end %>

<%= f.ss_field_set :order, tt: true  %>

<%= f.ss_field_set :shortcut, tt: true do %>
  <%= f.select :shortcut, @item.shortcut_options %>
<% end %>

<%= f.ss_field_set :view_route, tt: true do %>
  <%= f.select :view_route, Cms::Node.new.route_options, selected: view_route, include_blank: true %>
<% end %>
