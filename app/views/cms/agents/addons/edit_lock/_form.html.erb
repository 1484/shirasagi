<% return if @item.new_record? %>
<%
  has_action_lock = url_for(action: :lock) rescue nil
  return unless has_action_lock
%>

<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>
<%= jquery do %>
  var editLock = new Cms_EditLock(".mod-cms-edit_lock", "<%= url_for action: :lock %>", "<%= url_for action: :unlock %>");
<% end %>

<%= f.ss_field_set :lock_owner, value: @item.lock_owner.long_name, disabled: true %>
<%= f.ss_field_set :lock_until, value: @item.lock_until, disabled: true %>
