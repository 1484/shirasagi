<% return "" unless @cur_site.twitter_token_enabled? %>
<% return "" if @item.try(:branch?)%>

<% if @cur_site.twitter_token_enabled? %>
  <%= f.ss_field_set :twitter_auto_post do %>
    <%= f.text_field :twitter_auto_post, value: @item.label(:twitter_auto_post) %>
    <% @item.twitter_posted.each do |posted| %>
      <div>
        <a href="<%= @item.twitter_url(posted[:twitter_post_id], posted[:twitter_user_id]) %>" target="_blank">
          <%= @item.twitter_url(posted[:twitter_post_id], posted[:twitter_user_id]) %>
        </a>
      </div>
    <% end %>

    <% if @item.twitter_post_error.present? %>
      <%= f.ss_field_set :twitter_post_error, class: "depth-2" do %>
        <div class="errorExplanation"><%= br @item.twitter_post_error %></div>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= f.ss_field_set :sns_auto_delete, value: @item.label(:sns_auto_delete) %>
<%= f.ss_field_set :edit_auto_post, value: @item.label(:edit_auto_post) %>
