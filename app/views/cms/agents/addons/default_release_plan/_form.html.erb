<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>
<%
  @item.default_release_days_after ||= 3
  @item.default_close_days_after ||= 1000
%>

<%= f.ss_select_set :default_release_plan_state, tt: true %>

<%= f.ss_field_set :default_release_days_after, tt: true do %>
  <div class="short">
    <div class="input-group" style="width: 12em;">
      <%= f.number_field :default_release_days_after %> <span class="input-group-append"><%= t("ss.units.days_after") %></span>
    </div>
  </div>
<% end %>

<%= f.ss_field_set :default_close_days_after, tt: true do %>
  <div class="short">
    <div class="input-group" style="width: 12em;">
      <%= f.number_field :default_close_days_after %> <span class="input-group-append"><%= t("ss.units.days_after") %></span>
    </div>
  </div>
<% end %>

<%= f.ss_field_set :close_days_before, tt: true do %>
  <div class="short">
    <div class="input-group" style="width: 12em;">
      <%= f.number_field :close_days_before %> <span class="input-group-append"><%= t("ss.units.days_before") %></span>
    </div>
  </div>
<% end %>
