<%= coffee do %>
$ ->
  result = $(".result")
  $(".search").on "click", (e)->
    path    = "<%= cms_search_html_path %>"
    keyword = $(".keyword").val()
    option  = $(".option:checked").val();
    data    = { s: { keyword: keyword, option: option } }

    if keyword != ""
      $.ajax
        type: "GET",
        data: data
        url: path + "?" + $.param(data)
        beforeSend: ->
          result.html(SS.loading)
        success: (data)->
          result.html(data)
          result.find("input:enabled").prop("checked", true)
        error: (data, status) ->
          alert(data)
          console.log data
          result.html("input")
          alert(["== Error =="].concat(data.responseJSON).join("\n"))

    e.preventDefault()
    return false

  $(".replace").on "click", (e)->
    keyword    = $(".keyword").val()
    page_ids   = $("input[name='page_ids[]']:checked:enabled")
    part_ids   = $("input[name='part_ids[]']:checked:enabled")
    layout_ids = $("input[name='layout_ids[]']:checked:enabled")

    if keyword != "" && (page_ids.length || part_ids.length || layout_ids.length)
      # post
    else
      e.preventDefault()
      return false

  $("th input").remove()
  $("input[name='page_ids[]']").remove()
  $("input[name='part_ids[]']").remove()
  $("input[name='layout_ids[]']").remove()
<% end %>

<%= form_for :item, url: { action: :update }, html: { class: "index-search", multipart: true } do |f| %>
<div class="search-form">
  <dl class="see">
    <dt style="font-weight: normal;"><%= t("cms.search.keyword") %><%= @model.tt :search_keyword %></dt>
    <dd>
      <%= text_field_tag :keyword, "", value: @keyword, class: :keyword %>
      <%= f.submit t("views.button.search"), name: "search", class: :search %>
    </dd>

    <dt style="font-weight: normal;"><%= t("cms.search.replacement") %><%= @model.tt :replace_keyword %></dt>
    <dd>
      <%= text_field_tag :replacement, "", value: @replacement, class: :replacement %>
      <%= f.submit t("views.button.replace_all"), name: "replace", class: :replace %>
    </dd>

    <dt style="font-weight: normal;"><%= t("cms.search.option") %><%= @model.tt :search_option %></dt>
    <dd>
      <label>
        <%= radio_button_tag :option, :url, true, class: :option %>
        <%= t("cms.search.url") %>
      </label>
      <label>
        <%= radio_button_tag :option, :regexp, false, class: :option %>
        <%= t("cms.search.regexp") %>
      </label>
    </dd>
  </dl>
</div>

<div class="result">
  <% if @update_items %>
    <%= render file: "cms/search_html/index" %>
  <% end %>
</div>
<% end %>
