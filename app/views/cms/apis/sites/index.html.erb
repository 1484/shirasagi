<%= jquery do %> SS_SearchUI.modal(); <% end %>

<div class="content-search card mb-3">
  <div class="card-body search-ui-form">
    <%= form_for :s, url: { action: :index }, html: { method: "GET", class: "search no-form-inline" } do |f| %>
      <%= f.text_field :keyword, value: params[:s].try(:[], :keyword) %>
        <%= hidden_field_tag :single, params[:single] if params[:single].present? %>
      <%= f.submit  t("cms.apis.sites.search"), class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>

<%= paginate @items if @items.try(:current_page) %>

<div class="table-responsive">
  <table class="table table-striped index">
    <thead class="list-head">
      <tr>
        <% if @multi %>
        <th class="checkbox"><input type="checkbox" /></th>
        <% end %>
        <th class="host"><%= @model.t :host %></th>
        <th class="name"><%= @model.t :name %></th>
        <th class="updated"><%= @model.t :updated %></th>
      </tr>
    </thead>
    <tbody class="items">
      <% @items.each do |item| %>
        <tr data-id="<%= item.id %>" class="list-item">
          <% if @multi %>
          <td class="checkbox">
            <input type="checkbox" name="ids[]" value="<%= item.id %>" />
          </td>
          <% end %>
          <td class="host"><%= link_to item.host, "#", class: @multi ? "select-item" : "select-single-item" %></td>
          <td class="name"><%= item.name %></td>
          <td class="updated"><%= tryb { item.updated.strftime("%Y/%m/%d %H:%M") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="search-ui-select">
  <%= button_tag t("cms.apis.sites.select"), { type: :button, class: "select-items btn btn-outline-primary" } %>
</div>

<%= paginate @items if @items.try(:current_page) %>
