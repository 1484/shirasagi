<%

  @important_notices = @notices.select { |notice| notice.notice_severity == Cms::Notice::NOTICE_SEVERITY_HIGH }
  @normal_notices = @notices.select { |notice| notice.notice_severity != Cms::Notice::NOTICE_SEVERITY_HIGH }

%>
<% if @important_notices.present? || @normal_notices.present? %>
<div class="index notices notices-severity-high">
  <div class="list-head"><%= t "cms.notice" %></div>

  <ul class="list-items">
    <% @important_notices.each do |notice| %>
    <li class="list-item">
      <div class="info">
        <%= link_to notice.name, notice_cms_contents_path(notice: notice), class: "title notice-severity-high" %>
        <span class="datetime"><%= notice.released.strftime("%Y/%m/%d %H:%M") %></span>
      </div>
    </li>
    <% end %>

    <% @normal_notices.each do |notice| %>
    <li class="list-item">
      <div class="info">
        <%= link_to notice.name, notice_cms_contents_path(notice: notice), class: "title notice-severity-normal" %>
        <span class="datetime"><%= notice.released.strftime("%Y/%m/%d %H:%M") %></span>
      </div>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="index">
  <div class="list-head"><%= t "cms.content" %></div>

  <ul class="list-items">
    <% @items.each do |item| %>
    <li class="list-item">
      <nav class="tap-menu">
        <%= link_to :"cms.content", contents_path(item) %>
        <%= link_to :pc_preview, cms_preview_path(path: "#{item.filename}/"), target: :_blank %>
        <%= link_to :mobile_preview, cms_mobile_preview_path(path: "#{item.filename}/"), target: :_blank %>
        <%= link_to :view_site, item.full_url, target: :_blank %>
      </nav>
      <div class="info">
        <%= link_to item.name, contents_path(item), class: "title" %>

        <div class="meta">
          <span class="id">#<%= item.id %></span>
          <span class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></span>
          <span class="filename"><%= File.basename item.filename %></span>
          <span class="route"><%= t "modules.#{item.route.sub(/\/.*/, '')}" %></span>
          <span class="state"><%= t "views.state.#{item.status}" %></span>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
