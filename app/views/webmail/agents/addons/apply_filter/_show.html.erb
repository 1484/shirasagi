<%= form_for :item, url: { action: :apply } do |f| %>
<%= error_messages_for :item %>

<dl class="see">
  <dd class="wide">
    <%= f.select_tag :mailbox, options_for_select(@item.mailbox_options), include_blank: '' %>
    <%= f.submit t("webmail.links.apply"), class: 'btn', data: { confirm: t("webmail.confirm.apply_filter") } %>
  </dd>
</dl>

<% end %>
