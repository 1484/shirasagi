<%= jquery do %>
  Webmail_Mail.render();
<% end %>

<dl class="see">
  <dt><%= @model.t :subject %></dt>
  <dd><%= @item.subject %></dd>

  <dt><%= @model.t :date %></dt>
  <dd><%= @item.date.strftime("%Y/%m/%d %H:%M") %></dd>

  <dt><%= @model.t :from %></dt>
  <dd><%= @item.from %></dd>

  <% if @item.to.present? %>
  <dt><%= @model.t :to %></dt>
  <dd><%= @item.to.join('; ') %></dd>
  <% end %>

  <% if @item.cc.present? %>
  <dt><%= @model.t :cc %></dt>
  <dd><%= @item.cc.join('; ') %></dd>
  <% end %>

  <% if @item.bcc.present? %>
  <dt><%= @model.t :bcc %></dt>
  <dd><%= @item.bcc.join('; ') %></dd>
  <% end %>

  <dt><%= @model.t :body %></dt>
  <% if @item.html %>
    <dd><%= @item.sanitized_html %>
  <% else %>
    <dd><%= br @item.text %></dd>
  <% end %>

  <% if @item.attachments.present? %>
  <dt><%= @model.t :attachments %></dt>
  <% @item.attachments.each_with_index do |at, idx| %>
    <% target = at.content_type.start_with?('image') ? '_blank' : nil %>
    <dd><%= link_to at.filename, { action: :attachment, idx: idx }, target: target %></dd>
  <% end %>
  <% end %>
</dl>
