<%= jquery do %>
  Webmail_Mail.render();
<% end %>

<%= f.hidden_field :reply_uid %>
<%= f.hidden_field :forward_uid %>

<dl class="see mod-webmail-mail">
  <dt><%= @model.t :to %></dt>
  <dd>
    <%= f.text_area :to_text, style: "height: 4em;" %>
    <%= render 'address_form', { f: f, field: :to } %>
  </dd>

  <dt><%= @model.t :cc %></dt>
  <dd>
    <%= f.text_area :cc_text, style: "height: 4em;" %>
    <%= render 'address_form', { f: f, field: :cc } %>
  </dd>

  <dt><%= @model.t :bcc %></dt>
  <dd>
    <%= f.text_area :bcc_text, style: "height: 4em;" %>
    <%= render 'address_form', { f: f, field: :bcc } %>
  </dd>

  <dt><%= @model.t :subject %></dt>
  <dd><%= f.text_field :subject %></dd>

  <dt><%= @model.t :body %></dt>
  <dd>
    <% format = @item.html? ? 'html' : '' %>
    <%= f.select :format, @item.format_options, selected: format %>
    <%= f.select :signature, @item.signature_options, include_blank: Webmail::Signature.t(:default) %>
  </dd>

  <dd class="wide">
    <div class="body-text">
      <%= f.text_area :text, style: "height: 400px;" %>
    </div>
    <div class="body-html">
      <%= html_editor ".mod-webmail-mail .html", advanced: true, templates: false %>
      <%= f.text_area :html, class: "html", style: "height: 400px;" %>
    </div>
  </dd>
</dl>
