<%= code_editor "#addon-event-agents-addons-page_list .html", mode: :html, readonly: true %>

<%= f.ss_field_set :conditions, disabled: true do %>
  <% @item.conditions.each do |condition| %>
    <% condition %>
  <% end %>
<% end %>

<%= f.ss_field_set :sort, value: @item.label(:sort), disabled: true %>

<%= f.ss_field_set :limit, disabled: true %>

<%= f.ss_field_set :upper_html, disabled: true do %>
  <%= f.text_area :upper_html, class: "html", disabled: true, rows: 6 %>
<% end %>

<%= f.ss_field_set :loop_html, disabled: true do %>
  <% if @item.loop_setting.present? %>
    <%= f.text_field :loop_setting_id, value: @item.loop_setting.name, disabled: true %>
  <% end %>

  <%= f.text_area :loop_html, class: "html", disabled: true, rows: 6 %>
<% end %>

<%= f.ss_field_set :lower_html, disabled: true do %>
  <%= f.text_area :lower_html, class: "html", disabled: true, rows: 6 %>
<% end %>

<%= f.ss_field_set :new_days, disabled: true do %>
  <%= f.text_field :new_days, value: "#{@item.new_days} #{t "datetime.prompts.day"}", disabled: true %>
<% end %>
