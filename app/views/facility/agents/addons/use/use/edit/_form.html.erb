<dl class="see mod-use">
  <dd class="wide" style="line-height: 2.5">
    <%= f.hidden_field "use_ids[]", value: "" %>
    <% if @cur_node.present? %>
      <% @cur_node.st_uses.each do |cate| %>
        <label>
          <%= f.check_box("use_ids[]", {}, cate._id) %>
          <%= cate.name %>
        </label>
      <% end %>
    <% end %>
  </dd>
</dl>
