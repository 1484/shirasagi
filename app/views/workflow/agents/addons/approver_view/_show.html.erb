<% @item.levels.each do |level| %>
  <h3 class="workflow-level-header"><%= @model.t :level, level: level %></h3>

  <%= f.ss_field_set :required_counts, value: @item.required_count_label_at(level), disabled: true %>

  <%= f.ss_field_set :approver_attachment_uses, value: @item.approver_attachment_enabled_at?(level) ? t("ss.options.state.enabled") : t("ss.options.state.disabled"), disabled: true %>

  <%= f.ss_field_set :approvers, disabled: true do %>
    <div id="item_group_ids" class="table-responsive">
      <table class="index table table-striped">
        <thead>
          <tr>
            <th class="name"><%= @model.approver_user_class.t :name %></th>
            <th class="email"><%= @model.approver_user_class.t :email %></th>
            <th><%= t('ss.buttons.edit') %></th>
          </tr>
        </thead>
        <tbody>
        <% @item.approver_users_at(level).each do |user| %>
          <tr>
            <% if user.present? %>
            <td><%= user.long_name %></td>
            <td><%= user.email %></td>
            <td>
              <% if @item.approver_user_editable?(level, user) %>
              <i class="material-icons" style="font-size: 100%;">&#xE5CA;</i>
              <% end %>
            </td>
            <% else %>
            <td colspan="3"><%= t("workflow.user_deleted") %></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
