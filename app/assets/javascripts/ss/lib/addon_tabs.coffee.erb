class @SS_AddonTabs
  @render: ->
    $('.addon-head').on 'click', ->
      return if $(this).parent().attr('id') == 'addon-basic'
      $(this).parent().find('.addon-body').animate( { height: 'toggle' }, 'fast' )

  @hide: (view) ->
    $(view).parent().hide()

  # TODO: deprecated
  @toggleView: (view) ->
    console.log "SS_AddonTabs.toggleView is deprecated"
    $(view).parent().hide()

  @head: (content) ->
    $(content).parent().parent().find('.addon-head h2')
