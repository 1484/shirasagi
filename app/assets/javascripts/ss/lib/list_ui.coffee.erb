class @SS_ListUI
  @render: ->
    $(".list-item").each ->
      list = $(this)
      list.find("input:checkbox").change ->
        list.toggleClass("checked", $(this).prop("checked"))
      list.mouseup (e) ->
        if !$(e.target).is('a') && !$(e.target).is("input") && !$(e.target).is("label")
          $('.list-item input:checkbox').prop('checked', false)
          $('.list-item').removeClass('checked')
          list.find(".list-item-tap").css("left", e.pageX).css("top", e.pageY).show()
          list.find("input:checkbox").trigger("click")
      list.mouseleave ->
        $(".list-item-tap").hide()
    $(".list-head input:checkbox").change ->
      chk = $(this).prop('checked')
      $('.list-item input:checkbox').each ->
        $(this).prop('checked', chk)

  @deleteitem: (id)->
    $.ajax
      type: "post"
      url: location.pathname + "/" + id
      async: false
      data: "_method=delete"
      success: (msg) ->
        #
      error: (msg, status) ->
        alert(["== Error =="].concat(msg["statusText"]).join("\n"));
