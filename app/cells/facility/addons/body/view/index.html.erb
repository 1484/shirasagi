<style type="text/css">
dl.see {
  margin: 0px;
}
dl.see > dt {
  float: left;
  min-width: 140px;
  min-height: 1.0em;
  color: black;
  font-weight: bold;
}
dl.see > dd {
  min-height: 1.41em;
  margin: 0 0 0 140px;
  padding: 0 0 30px;
  margin: 0px 0px 0px 140px;
}
dl.see > dt ~ dt {
  margin-top: 20px;
}
dl.see > dd ~ dd {
  margin-top: 20px;
}
dl.see > dd + dd {
  margin-top: 10px;
}
dl.see > dt.wide {
  float: none;
  width: 100%;
  box-sizing: border-box;
}
dl.see > dd.wide {
  float: none;
  margin-left: 0px;
  padding-top: 0px;
  border-top: 0px;
}
</style>

<dl class="see body">
  <dt><%= @cur_node.class.t :kana %></dt>
  <dd><%= @cur_node.kana %></dd>

  <dt><%= @cur_node.class.t :address %></dt>
  <dd><%= @cur_node.address %></dd>

  <dt><%= @cur_node.class.t :tel %></dt>
  <dd><%= @cur_node.tel %></dd>

  <dt><%= @cur_node.class.t :fax %></dt>
  <dd><%= @cur_node.fax %></dd>

  <dt><%= @cur_node.class.t :homepage %></dt>
  <dd><%= link_to(@cur_node.homepage, @cur_node.homepage, target: "_blank") if @cur_node.homepage.present? %></dd>
</dl>
