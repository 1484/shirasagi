<h1>子育て施設検索</h1>

<%= form_tag(@search_path, {:method => "get" } ) do %>
  <div class="type">
    <h2>施設の種類を選択</h2>
    <% @cur_node.st_type_categories.each do |cate| %>
      <div class="element">
        <%= check_box_tag 'query[type_category_ids][]', cate.id, nil,
          { :id => "query_type_category_ids_#{cate.id}", :class => "prop"} %>
        <label for=<%= "query_type_category_ids_#{cate.id}" %>><%= cate.name %></label>
      </div>
    <% end %>
  </div>

  <div class="use">
    <h2>施設の用途を選択</h2>
    <% @cur_node.st_use_categories.each do |cate| %>
      <div class="element">
        <%= check_box_tag 'query[use_category_ids][]', cate.id, nil,
          { :id => "query_use_category_ids_#{cate.id}", :class => "prop"} %>
        <label for=<%= "query_use_category_ids_#{cate.id}" %>><%= cate.name %></label>
      </div>
    <% end %>
  </div>

  <div class="location">
    <h2>施設のある地域を選択</h2>
    <% @cur_node.st_location_categories.each do |cate| %>
      <div class="element">
        <%= check_box_tag 'query[location_category_ids][]', cate.id, nil,
          { :id => "query_location_category_ids_#{cate.id}", :class => "prop"} %>
      <label for=<%= "query_location_category_ids_#{cate.id}" %>><%= cate.name %></label>
      </div>
    <% end %>
  </div>
<% end %>
